<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        @import url(/static/css/style.css);
        @import url(/static/css/header.css);
        @import url(/static/css/codeMediaQuery.css);
    </style>
    <link rel='stylesheet' href='//cdn.jsdelivr.net/npm/hack-font@3.3.0/build/web/hack.css'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Do+Hyeon&family=Noto+Sans+KR:wght@100;700;800;900&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="endDiv_wrapper">
        <div class="endDiv">
            <img src="/static/img/icon/like.png" width="30" height="30" style="margin-top: 15px">

            <span class="endDiv_title2" style="margin-top: 10px;font-size: 13px;">
                <%= name %>
            </span>
            <span class="endDiv_title">끝났습니다!</span>

            <img src="/static/img/icon/statistic.png" width="40" height="40" style="margin-top: 40px;">
            <span style="color: rgb(108, 108, 108)">통계</span>

            <div class="endDiv_list">
                <div class="endDiv_list_1">
                    <span class="endDiv_list_1_title">경과 시간</span>
                    <span id="endDiv_list_1_value">00:00</span>
                </div>
                <div class="endDiv_list_2">
                    <span class="endDiv_list_2_title">오타 수</span>
                    <span id="endDiv_list_2_value">0개</span>
                </div>
                <div class="endDiv_list_3">
                    <span class="endDiv_list_3_title">키보드 입력수</span>
                    <span id="endDiv_list_3_value">0번</span>
                </div>
                <div class="endDiv_list_4">
                    <span class="endDiv_list_4_title">정확도</span>
                    <span id="endDiv_list_4_value">0%</span>
                </div>
            </div>
        </div>
    </div>
    <div class="header_wrapper">
        <div class="header">
            <div class="header_wrapper2">
                <img src="/static/img/icon/icon.png" width="33" height="30" alt="icon" style="margin-left: 15px;">
                <span class="title_language_2">
                    <%= name %>
                </span>
                <span class="title_language_1">
                    #<%= language %>
                </span>
            </div>
            <span id="header_percent">0%</span>
        </div>
        <div class="header_progress_wrapper">
            <div id="header_progress">
            </div>
        </div>
    </div>
    <div class="world_wrap">
        <div class="word">
        </div>
    </div>
    <div class="info">
        <img src="/static/img/icon/moon.png" width="25" height="25" class="togle_thema_icon" onclick="togle_thema()">
        <span class="timer_title">타이머</span>
        <span id="timer_value">00:00</span>
        <span class="ota_title">오타</span>
        <span id="ota_value">0개</span>
        <span class="keyboard_title">입력할 단어</span>
        <span id="now_code" class="keyboard"></span>
    </div>
    <script type="text/javascript" src="/static/js/timer.js"></script>
    <script>
        var codeText = `<%= data %>`;
        var codeName = `<%= name %>`;
        var isEnd = false
        codeText = codeText.replace(/&#34;/g, '"');
        codeText = codeText.replace(/&#39;/g, "'");
        codeText = codeText.replace(/&gt;/g, '>');
        codeText = codeText.replace(/&lt;/g, '<');
        codeText = codeText.replace(/&amp;/g, '&');
        window.addEventListener("keydown", (e) => event.keyCode == 32 ? event.preventDefault() : false);
    </script>
    <script>
        togle = JSON.parse(localStorage.getItem("thema"))
        function darkmode() {
            document.querySelector('body').dataset.theme = 'dark';
            document.querySelector('.header').dataset.theme = 'dark';
            document.querySelector('.title_language_2').dataset.theme = 'dark';
            document.querySelector('.header_progress_wrapper').dataset.theme = 'dark';
            document.querySelector('.info').dataset.theme = 'dark';
            document.querySelector('.timer_title').dataset.theme = 'dark';
            document.querySelector('.keyboard').dataset.theme = 'dark';
            document.querySelector('#header_percent').dataset.theme = 'dark';
            document.querySelector('.header').dataset.theme = 'dark';
            document.querySelector('.togle_thema_icon').src = '/static/img/icon/sun.png';
            var worldSpan = document.querySelectorAll('.word > span')
            worldSpan.forEach(function (span) {
                span.dataset.theme = 'dark'
            });
        }
        function whitemode() {
            document.querySelector('body').dataset.theme = 'none';
            document.querySelector('.header').dataset.theme = 'none';
            document.querySelector('.title_language_2').dataset.theme = 'none';
            document.querySelector('.header_progress_wrapper').dataset.theme = 'none';
            document.querySelector('.info').dataset.theme = 'none';
            document.querySelector('.timer_title').dataset.theme = 'none';
            document.querySelector('.keyboard').dataset.theme = 'none';
            document.querySelector('#header_percent').dataset.theme = 'none';
            document.querySelector('.header').dataset.theme = 'none';
            document.querySelector('.word').dataset.theme = 'none';
            document.querySelector('.togle_thema_icon').src = '/static/img/icon/moon.png';
            var worldSpan = document.querySelectorAll('.word > span')
            worldSpan.forEach(function (span) {
                span.dataset.theme = 'none'
            });
        }
        function togle_thema() {
            togle = !togle
            localStorage.setItem("thema", togle);
            togle ? darkmode() : whitemode();
        }
    </script>
    <script type="text/javascript" src="/static/js/handleText.js"></script>
</body>

</html>